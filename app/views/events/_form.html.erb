<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :year %><br />
    <%= select_year(Date.today, :start_year => Date.today.year, :end_year => 2.years.from_now.year,
      :prefix => 'event[year]', :discard_type => true) %>
  </div>
  <div class="field">
    <%= f.label :season_id %><br />
    <%= f.collection_select :season_id, Season.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :location %> (use obvious names like "Spain", not vague city names like "Cuenca")<br />
    <%= f.text_field :location %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
